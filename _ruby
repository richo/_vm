#!/usr/bin/env ruby

require File.expand_path('../lib/manager', __FILE__)

class Ruby < Manager
  include PosixProxy

  name "ruby"
  set_prefix "${_VM_PREFIX:-_}"

  include Plugin::List
  # Needs to be included last of the main_case plugins
  include Plugin::Set

  include Plugin::Ruby::Use
  include Plugin::Ruby::Reset
end

_ruby = Ruby.new
_ruby.build
